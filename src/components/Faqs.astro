---
type Faq = {
  question: string
  answer: string
}

interface Props {
  faqs: Faq[]
}

const { faqs } = Astro.props
---

<div class='faqs'>
  <header class='faqs-header'>
    <img src='#' alt='header-icon' />
    <h3>FAQs</h3>
  </header>
  <ul>
    {
      faqs.map((faq) => (
        <li>
          <div class='question'>
            <h4>{faq.question}</h4>
            <img src='#' alt='icon' />
          </div>
          <p class='answer'>{faq.answer}</p>
        </li>
      ))
    }
  </ul>
</div>
